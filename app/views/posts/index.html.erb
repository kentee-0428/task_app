<div class="container">
  <h2>スケージュール一覧</h2>
  <div class="table_container">
    <% if @posts.blank? %>
      <p>スケジュールがありません<%= link_to("スケジュール新規登録", "/posts/new") %>より作成してください</p>
    <% else %>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>タイトル</th>
            <th>開始日</th>
            <th>終了日</th>
            <th>終日</th>
            <th>スケジュール更新日</th>
            <th>確認</th>
            <th>編集</th>
            <th>削除</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.id %></td>
              <td><%= post.title %></td>
              <td><%= post.start_date.strftime("%Y年 %m月 %d日") %></td>
              <td><%= post.end_date.strftime("%Y年 %m月 %d日") %></td>
              <td>
              <% if post.all_date %>
                <div class="all_date_item">○</div>
              <% end %>
              </td>
              <td><%= post.updated_at.to_s(:datetime_jp) %></td>
              <td><%= link_to("確認", "/posts/#{post.id}") %></td>
              <td><%= link_to("編集", "/posts/#{post.id}/edit") %></td>
              <td><%= link_to("削除", "/posts/#{post.id}/destroy", {method:"post", data:{confirm:'削除してもいいですか？'}}) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="link to_new">
        <%= link_to("スケジュール新規登録", "/posts/new") %>
      </div>
    <% end %>
  </div>
</div>